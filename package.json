{
  "name": "loading-spinner-react",
  "version": "0.0.3",
  "description": "A collection of customizable react loding spinners.",
  "repository": "https://github.com/fazzolari17/loading-spinner-react.git",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:esm": "tsc --module es6 --outdir ./dist/esm/",
    "build:cjs": "tsc --module commonjs --outdir  ./dist/",
    "dev": "webpack serve --open --config webpack.config.js",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --write .",
    "clean": "rm -rf dist/",
    "test": "jest"
  },
  "keywords": [
    "react", 
    "loader", 
    "spinner", 
    "loading spinner", 
    "spin", 
    "react component",
    "component",
    "spinning"
  ],
  "author": "Giuseppe Fazzolari",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^17.0.0 || ^16.0.0 || ^15.0.0" ,
    "react-dom": "^18.2.0 || ^17.0.0 || ^16.0.0 || ^15.0.0"
  },
  "types": "./dist/index.d.ts",
  "directories": {
    "test": "test"
  }
}
